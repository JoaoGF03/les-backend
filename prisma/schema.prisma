generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = "postgresql://les-backend:les-backend@localhost:5432/les-backend?schema=public"
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  avatar   String?

  teams Team[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  requested Event[] @relation("EventRequest")
  accepted  Event[] @relation("EventAttendee")
}

model Team {
  id          String @id @default(uuid())
  name        String @unique
  description String

  users  User[]
  events Event[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sport {
  id   String @id @default(uuid())
  name String @unique

  events Event[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String  @id @default(uuid())
  name        String
  description String
  day         String?
  time        String?
  teamsLimit  Int
  location    String?

  createdBy String

  sportId String?
  Sport   Sport?  @relation(fields: [sportId], references: [id])

  teams Team[]

  requests  User[] @relation("EventRequest")
  attendees User[] @relation("EventAttendee")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
