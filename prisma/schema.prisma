generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://les-backend:les-backend@localhost:5432/les-backend?schema=public"
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  avatar   String?

  teams Team[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id          String @id @default(uuid())
  name        String @unique
  description String

  users User[]
  // events Event[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

